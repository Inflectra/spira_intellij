<idea-plugin>
  <id>com.inflectra.SpiraTeam</id>
  <name>SpiraTeam Plugin</name>
  <version>1.0</version>
  <vendor email="support@inflectra.com" url="http://www.inflectra.com">Inflectra Corporation</vendor>

  <description><![CDATA[
      Plugin for SpiraTeam
    ]]></description>

  <change-notes><![CDATA[
      Plugin now persists credentials through restarts
    ]]>
  </change-notes>

  <idea-version since-build="145.0"/>

  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <toolWindow id="SpiraTeam Window" icon="/icons/spira-icon.png" anchor="right"
                factoryClass="com.inflectra.idea.ui.SpiraToolWindowFactory"/>
    <applicationService  serviceInterface="com.inflectra.idea.core.SpiraTeamCredentials"
                         serviceImplementation="com.inflectra.idea.core.SpiraTeamCredentials"/>
  </extensions>
  <application-components>
    <component>
      <implementation-class>com.inflectra.idea.core.SpiraTeamCredentials</implementation-class>
      <interface-class>com.inflectra.idea.core.SpiraTeamCredentials</interface-class>
    </component>
  </application-components>

  <actions>
    <!-- Add your actions here -->

    <action id="SpiraTeamLogin" class="com.inflectra.idea.ui.SpiraTeamLogin" text="SpiraTeam Login"
            description="Prompt to login to SpiraTeam">
      <add-to-group group-id="HelpMenu" anchor="first"/>
    </action>
  </actions>

</idea-plugin>